<body>

  <div class="row">

    <div class="col-lg-3" style="background-color: white">

    </div>

    <div class="col-lg-6">
      <div class="container mx-auto">
      <p>
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          <%=budget.month%>
        </button>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <div class="card card-body-prev"></div>
          <% months.forEach(function(month) { %>

            <p>
            <button class="btn btn-primary" type="button"><%= month.month %></button>
          </p>

          <% }); %>
          <div class="card card-body-next"></div>
        </div>

      </div>

      <hr>

  </div>

      <!-- loop through the budget building category boxes -->
      <% budget.category.forEach(function(category, index) { %>

      <div class="container mx-auto">
        <% if (!category.name) { %>
        <!-- if this is a new category and the name is blank, make the name an input so it can be edited -->
        <form action="/editCat" method="post">
          <div class="item"><input class="input-label" type="text" name="catName" value="" placeholder="Untitled" required onChange="this.form.submit()"></input><input type="hidden" name="index" value="<%= index %>"></input><span
              class="header-column">Planned</span><span class="header-column">Received</span>
          </div>
        </form>
        <% } else if (category.name === "Income") { %>
        <!-- if the category is Income, make it say Received -->
        <div class="item">
          <div class="header-column"><%= category.name %></div>
          <div class="header-column">Planned</div>
          <div class="header-column">Received</div>
        </div>
        <% } else { %>
        <!-- otherwise make it say Remaining -->
        <div class="item">
          <div class="header-column"><span><%= category.name %></span></div>
          <div class="header-column">Planned</div>
          <div class="header-column">Remaining</div>
        </div>
        <% } %>

        <!-- Loop through each budget item -->
        <% category.items.forEach(function(item, itemIndex) { %>

        <!-- <form id="deleteForm" action="/deleteItem" method="post">
          <input type="hidden" name="itemIndex" value="<%= itemIndex %>"></input>
          <input type="hidden" name="index" value="<%= index %>"></input>
        </form> -->

        <div class="item" onmouseover="dosomething(this)" onmouseout="dothat(this)">
          <form class="" action="/deleteItem" method="post">
            <button type="submit" class="btndel" name="button" value="<%= index %>"><i class="far fa-trash-alt"></i></button>
            <input type="hidden" name="itemIndex" value="<%= itemIndex %>"></input>
          </form>

          <% if (!item.name) { %>
          <!-- if it's a new item and the name is blank, make both inputs required, and the Planned Amt the submit -->

          <form action="/editItem" method="post">
            <input id="<%= item._id %>" class="input-label" type="text" name="itemName" value="<%= item.name %>" placeholder="Enter a name" required></input>
            <input class="planned-label" name="planned" value="<%= item.planned %>" onChange="this.form.submit()" oninput="setTwoNumberDecimal(this)" onclick="this.select()" required></input>
            <input type="hidden" name="itemIndex" value="<%= itemIndex %>"></input>
            <input type="hidden" name="index" value="<%= index %>"></input>
            <input type="hidden" name="id" value="<%= item._id %>"></input>
            <input type="hidden" name="budgetid" value="<%= budget._id %>"></input>
            <span class="span-rem">$0.00</span>

            <% } else { %>
            <!-- otherwise neither input is required and either input will submit the post -->

            <form action="/editItem" method="post">
              <input id="<%= item._id %>" class="input-label" type="text" name="itemName" value="<%= item.name %>" placeholder="Enter a name" onChange="this.form.submit()"></input>
              <input class="planned-label" name="planned" value="<%= item.planned %>" onChange="this.form.submit()" oninput="setTwoNumberDecimal(this)" onclick="this.select()"></input>
              <input type="hidden" name="itemIndex" value="<%= itemIndex %>"></input>
              <input type="hidden" name="index" value="<%= index %>"></input>
              <input type="hidden" name="id" value="<%= item._id %>"></input>
              <input type="hidden" name="budgetid" value="<%= budget._id %>"></input>
              <span class="span-rem">$0.00</span>

              <% } %>
        </div>
        </form>

        <% }) %>

        <form class="item" action="/addItem" method="post">
          <button type="submit" name="button" value="<%= index %>">Add Item</button>
          <!-- <input type="hidden" name="index" value="<%= index %>"></input> -->
        </form>
      </div>

      <% }); %>

      <div class="container mx-auto">
        <form class="item" action="/addCat" method="post">
          <button type="submit" name="button" value="">Add Category</button>
        </form>
      </div>

    </div> <!-- end of middle column -->

    <!-- right column -->
    <div class="col-lg-3" style="background-color: white">

    </div>

  </div>
